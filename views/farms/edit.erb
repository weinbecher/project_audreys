<div class="form">
<form class="add-farm" action="/farms/<%=@farm.id%>" method="post">
  <label for="farm-name"> Farm name: </label>
  <input type="text" name="name" id="farm-name" value="<%= @farm.name%>" required>

  <br/>

  <label for="farm-address"> Address: </label>
  <input type="text" size="40" name="address" id="farm-address" value="<%= @farm.address%>" required>

  <br/>


  <label for="farm-phone-num"> Phone number: </label>
  <input type="number" name="phone_num" id="farm-phone-num" value="<%= @farm.phone_num%>" required>

  <br/>


  <input type="submit" id="submit" value="Update Farm">
</form>


<form method="post" action="/farms/<%=@farm.id %>/delete">

  <input onclick="deleteComfirm()" type="submit"  value="Delete Farm"  id="delete" >

  <script>

    function deleteComfirm() {
      confirm(" Are you sure you want to delete this farm? ");
    }
    </script>


</form>
</div>
