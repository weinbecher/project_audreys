<h1> <%= @farm.name %> </h1>

<p>Address: <%= @farm.address %> </p>
<p>Phone Number: <%= @farm.phone_num %> </p>

<br/>

<p>
  <% @farm.product.each do |product| %>
  Product: <a href="../products/<%=product.id%>"><%= product.name %>  </a></br>
  <%= product.description %> </br>
  <hr>
  <% end %>
</p>





<form method="get" action="<%= @farm.id %>/edit">
<input type="submit" value="Edit Farm"/>
</form>

<form method="post" action="/farms/<%= @farm.id %>/delete">
<input type="submit" value="Delete Farm">
</form>
